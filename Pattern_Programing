1. PRINT RECTANGLE 

using System;

class Program {
  public static void Main (string[] args) 
  {
    Console.WriteLine("Please enter number of rows");
    int r = Convert.ToInt32(Console.ReadLine());
    
    for(int row = 0; row < r ; row++){
      for (int col = 0; col < r+1 ; col++){
        Console.Write ("*");
        Console.Write (" ");
      }
      Console.WriteLine ("");
    }
  }
}

