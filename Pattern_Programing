18. FLOYD TRIANGLE PATTERN 

using System;

class Program {
  public static void Main (string[] args) 
  {
    Console.WriteLine("Please enter number of rows");
    int r = Convert.ToInt32(Console.ReadLine());

    int count=0;
    for(int i=0; i< r; i++){
      for(int j=0; j< i+1; j++){
        count++;
        Console.Write(count);
        Console.Write(" ");
        }   
      Console.WriteLine(" ");    
    }   
  }
}

