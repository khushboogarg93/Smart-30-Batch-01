17. HOLLOW SQUARE PATTERN 

using System;

class Program {
  public static void Main (string[] args) 
  {
    Console.WriteLine("Please enter number of rows");
    int r = Convert.ToInt32(Console.ReadLine());

    for(int i=0; i< r; i++){
      for(int j=0; j<r; j++){
        if(i == 0 || i == (r-1) || j == 0 || j == (r-1)){
          Console.Write("*");
          Console.Write(" ");
        }
        else{
          Console.Write(" ");
          Console.Write(" ");
        }       
      }
      Console.WriteLine(" ");    
    }   
  }
}

